{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Open browser",
            "type": "shell",
            "command": "<Your browser command>",
            "isBackground": true,
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "windows": {
                "command": "explorer.exe \"http://localhost:7010\""
            },
            "osx": {
                "command": "open \"http://localhost:7010\""
            },
            "linux": {
                "command": "xdg-open \"http://localhost:7010\""
            }
            "problemMatcher": []
        }
    ]
}